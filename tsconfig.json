{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "target": "esnext",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "alwaysStrict": true,
    "declaration": true,
    "outDir": "./build",
    "rootDir": "./src",
    "module": "esnext",
    "checkJs": true,
    "types": ["node", "react", "react-dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
